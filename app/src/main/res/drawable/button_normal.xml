<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- 按下时的背景色 -->
            <corners android:radius="8dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
            <stroke
                android:width="2dp"
                android:color="#8B8B8B"/> <!-- 边框颜色 -->
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0"/> <!-- 正常状态背景色 -->
            <corners android:radius="8dp"/>
            <stroke
                android:width="2dp"
                android:color="#A9A9A9"/> <!-- 边框颜色 -->
        </shape>
    </item>
</selector>
